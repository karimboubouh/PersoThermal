#: import SlideTransition kivy.uix.screenmanager.SlideTransition
ScreenManagement:
    transition: SlideTransition()
#    WelcomeScreen:
    ConfScreen:
    TrainScreen:
    PredictScreen:

<WelcomeScreen>:
    name: 'welcome'
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/bg.png'
    Image:
        id: avatar
        pos_hint: {"center_y": .8}
        source: "images/logo1.png"
    MDLabel:
        text: "Personalized P2P ML"
        markup: True
        halign: "center"
        pos_hint: {"center_y":.55}
        font_style: "Subtitle2"
        line_height: 1.5
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        font_size: '28dp'
        font_name: 'fonts/FGSmilla.ttf'
        # padding:[20,0]
    MDLabel:
        text: '"Train your own personalized model by collaborating with others over a decentralized network"'
        markup: True
        halign: "center"
        pos_hint: {"center_y":.5}
        font_style: "Subtitle2"
        line_height: 1.5
        theme_text_color: "Custom"
        text_color: .9, .9, .9
        font_size: '12dp'
        font_name: "fonts/Lucida.ttf"
        padding:[20,0]
    MDRaisedButton:
        text: "Configure my device"
        md_bg_color: app.theme_cls.accent_color
        pos_hint: {"center_x": 0.5, "center_y":0.25}
        size_hint: .7,0.08
        font_size: '16dp'
        font_name: "fonts/RobotoM.ttf"
        on_press: app.root.current = 'conf'
        # on_press: root.manager.change_screen("conf")
        # on_press: root.demo()
    MDLabel:
        text: "Â© Copyright UM6P 2022"
        font_style: "Overline"
        theme_text_color: "Custom"
        text_color: .7, .7, .7
        halign: "center"
        pos_hint: {"center_y":0.05}

<ConfScreen>:
    name: 'conf'
    MDBoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            title: 'Join P2P Network'
            left_action_items: [["web"]]
        MDLabel:
            text: "Connect to network bridge"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y":.5}
            font_size: '14dp'
            font_name: "fonts/RobotoM.ttf"
        MDBoxLayout:
            orientation: "horizontal"
            spacing: "40dp"
            padding: 40
            MDTextField:
                id: bridge_host
                hint_text: "IP Address"
                # input_type: 'number # requires kivy==master
                color_mode: 'accent'
                pos_hint: {"center_x": 0.5, "center_y":.5}
                mode: "rectangle"
            MDTextField:
                id: bridge_port
                hint_text: "Port"
                input_filter: 'int'
                color_mode: 'accent'
                size_hint: None, None
                pos_hint: {"center_x": 0.5, "center_y":.5}
                width: "50dp"
                mode: "rectangle"
        MDBoxLayout:
            orientation: "horizontal"
            padding: [20, 40, 40, 40]
            MDLabel:
                text: "Use simulated data from bridge"
                font_size: '14dp'
                font_name: "fonts/RobotoM.ttf"
            MDSwitch:
                id: request_data
                active: root.request_data
                color_mode: 'accent'
                pos_hint: {"center_x": 0.5, "center_y":.5}
                on_active: root.on_request_data(*args)
        MDSeparator:
        MDBoxLayout:
            orientation: "horizontal"
            padding: [20, 40, 40, 40]
            MDLabel:
                text: "Share training logs"
                font_size: '14dp'
                font_name: "fonts/RobotoM.ttf"
            MDSwitch:
                id: share_logs
                active: True
                color_mode: 'accent'
                pos_hint: {"center_x": 0.5, "center_y":.5}
        MDSeparator:
        MDFlatButton:
            id: ds_label
            text: root.ds_path
            padding: 20, 20
            theme_text_color: "Custom"
            text_color: 1, 1, 0, 1
            size_hint_y: 0.5
            width: root.width * 0.5
            markup: True
            pos_hint: {'center_x': .5, 'center_y': .6}
            on_release: root.file_manager_open()

        MDFillRoundFlatIconButton:
            id: connect_btn
            icon: "vpn"
            text: root.connect_btn
            width: root.width * 0.54
            pos_hint: {"center_x": 0.5, "center_y":0.5}
            font_name: "fonts/RobotoM.ttf"
            on_press:
                root.connect()
        MDLabel:
            id: connect_logs
            text: root.connect_logs
            markup: True
            halign: "left"
            pos_hint: {"center_x": 0.5, "center_y":.5}
            font_size: '14dp'
            line_height: 1.3
            size_hint: 1, 2
            padding:[40,0]
        MDRaisedButton:
            id: join_btn
            text: 'Join P2P Training'
            disabled: root.join_disabled
            size_hint: 1, .75
            halign: "center"
            theme_text_color: "Secondary"
            pos_hint: {'center_x':0.5,'center_y':0.6}
            font_size: '18dp'
            font_name: "fonts/RobotoM.ttf"
            on_press:
                root.join_train()
                root.manager.transition.direction = "left"

<TrainScreen>:
    name: 'train'
    # on_enter: root.init_train()
    MDBoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            title: 'Training'
            left_action_items: [["atom", lambda x: app.callback()]]
            elevation:8
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            MDLabel:
                id: train_log
                markup: True
                text: root.logs
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                padding: 10, 10
                line_height: 2
                font_size: '14dp'
                font_name: "fonts/RobotoM.ttf"
        MDRaisedButton:
            text: 'Disconnect'
            size_hint: 1, .1
            md_bg_color: app.theme_cls.error_color
            pos_hint: {'center_x':0.5,'center_y':0.1}
            on_press: root.disconnect()
        
<PredictScreen>:
    name: 'predict'
    MDBoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            title: 'Training summary'
            left_action_items: [["switch", lambda x: app.callback()]]
            elevation:8
        MDLabel:
            id: train_summary
            text: 'Training finished.'
            padding: [50,0]
            line_height: 3
        MDRaisedButton:
            text: 'Start over'
            size_hint: 1, .1
            pos_hint: {'center_x':0.5,'center_y':0.1}
            on_press: root.manager.current = 'welcome'